			<property name="items_tags" value="food" />
			<property name="count" value="1" />
			<property name="count_type" value="Items" />
		</action>

		<action class="AddBuff">
			<property name="phase" value="2" />
			<property name="buff_name" value="twitch_spoil" />
		</action>
</action_sequence>

