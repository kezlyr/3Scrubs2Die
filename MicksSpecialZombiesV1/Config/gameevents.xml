<!-- Ghast Food Spoilage - Main event that randomly picks 1-4 items -->
<action_sequence name="action_spoil_ghast">
		<property name="category" value="twitch_actions" />
		<property name="allow_user_trigger" value="true" />
		<property name="action_type" value="Game" />

		<!-- 25% chance to spoil 1 item -->
		<decision class="If">
			<property name="phase" value="1" />
			<property name="phase_on_complete" value="99" />
			<requirement class="RandomRoll">
				<property name="min_max" value="0,100"/>
				<property name="operation" value="LTE"/>
				<property name="value" value="25"/>
			</requirement>
			<action class="CallGameEvent">
				<property name="game_events" value="action_spoil_ghast_1" />
			</action>
		</decision>

		<!-- 25% chance to spoil 2 items -->
		<decision class="If">
			<property name="phase" value="1" />
			<property name="phase_on_complete" value="99" />
			<requirement class="RandomRoll">
				<property name="min_max" value="0,100"/>
				<property name="operation" value="GT"/>
				<property name="value" value="25"/>
			</requirement>
			<requirement class="RandomRoll">
				<property name="min_max" value="0,100"/>
				<property name="operation" value="LTE"/>
				<property name="value" value="50"/>
			</requirement>
			<action class="CallGameEvent">
				<property name="game_events" value="action_spoil_ghast_2" />
			</action>
		</decision>

		<!-- 25% chance to spoil 3 items -->
		<decision class="If">
			<property name="phase" value="1" />
			<property name="phase_on_complete" value="99" />
			<requirement class="RandomRoll">
				<property name="min_max" value="0,100"/>
				<property name="operation" value="GT"/>
				<property name="value" value="50"/>
			</requirement>
			<requirement class="RandomRoll">
				<property name="min_max" value="0,100"/>
				<property name="operation" value="LTE"/>
				<property name="value" value="75"/>
			</requirement>
			<action class="CallGameEvent">
				<property name="game_events" value="action_spoil_ghast_3" />
			</action>
		</decision>

		<!-- 25% chance to spoil 4 items -->
		<decision class="If">
			<property name="phase" value="1" />
			<property name="phase_on_complete" value="99" />
			<requirement class="RandomRoll">
				<property name="min_max" value="0,100"/>
				<property name="operation" value="GT"/>
				<property name="value" value="75"/>
			</requirement>
			<action class="CallGameEvent">
				<property name="game_events" value="action_spoil_ghast_4" />
			</action>
		</decision>
</action_sequence>

<!-- Ghast spoils 1 food item -->
<action_sequence name="action_spoil_ghast_1">
		<property name="category" value="twitch_actions" />
		<property name="action_type" value="Game" />

		<action class="PlaySound">
			<property name="sound" value="twitch_bad_action" />
			<property name="phase" value="1" />
		</action>

		<action class="PlaySound">
			<property name="phase" value="1" />
			<property name="sound" value="twitch_spoil" />
			<property name="inside_head" value="true" />
		</action>

		<action class="BeltTooltip">
			<property name="text" value="[FF0000]SOME OF YOUR FOOD HAS DECAYED!" />
			<property name="phase" value="1" />
		</action>

		<action class="ReplaceItems">
			<property name="phase" value="1" />
			<property name="items_location" value="Toolbelt,Backpack" />
