<configs>
<!-- ============================================================================
     ASYLUM TIERED TREASURE MAP SYSTEM - BLOCKS
     Treasure chest containers for each tier
     ============================================================================ -->

<!-- Tier 1: Infernal Treasure Chest - Orange tint -->
<append xpath="/blocks">
    <block name="cntAsylumTreasureT1">
        <property name="Extends" value="cntLootChestHero" param1="DescriptionKey"/>
        <property name="CreativeMode" value="None"/>
        <property name="LootList" value="asylumBuriedTreasureT1"/>
        <property name="CustomIcon" value="cntLootChestHero"/>
        <property name="CustomIconTint" value="FF6B35"/>
        <property name="TintColor" value="FF6B35"/>
        <property name="IsTerrainDecoration" value="true"/>
        <property name="DowngradeBlock" value="cntAsylumTreasureT1Insecure"/>
        <property name="SortOrder2" value="0110"/>
        <property name="Tags" value="buriedTreasure,timecharge"/>
        <property name="FilterTags" value="MC_helpers,SC_questblocks"/>
    </block>

    <block name="cntAsylumTreasureT1Insecure">
        <property name="Extends" value="cntLootChestHeroInsecure" param1="DescriptionKey"/>
        <property name="CreativeMode" value="None"/>
        <property name="LootList" value="asylumBuriedTreasureT1"/>
