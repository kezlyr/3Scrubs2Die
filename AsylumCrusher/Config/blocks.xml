<?xml version="1.0" encoding="UTF-8"?>
<configs>
  <append xpath="/blocks">

    <!-- ASYLUM CRUSHER WORKSTATION -->
    <block name="asylumCrusher">
      <!-- Class -->
      <property name="Class" value="Workstation"/>
      <property class="Workstation">
        <property name="Modules" value="output"/>
        <property name="CraftingAreaRecipes" value="crusher"/>
      </property>
      <property name="UnlockedBy" value="craftingWorkstations"/>

      <!-- UI -->
      <property name="CreativeMode" value="Player"/>
      <property name="CustomIcon" value="asylumCrusher"/>
      <property name="DescriptionKey" value="asylumCrusherDesc"/>
      <property name="DisplayType" value="blockMulti"/>
      <property name="WorkstationIcon" value="ui_game_symbol_cement_mixer"/>
      <property name="Stacknumber" value="1"/>

      <!-- Visual (temporary vanilla model; replace with custom when ready) -->
      <property name="Material" value="Mmetal"/>
      <property name="Shape" value="ModelEntity"/>
      <property name="Model" value="#@modfolder:Resources/shredder.unity3d?shredder"/>
      <property name="ModelOffset" value="0.3,0.5,0"/>
      <property name="MultiBlockDim" value="2,2,1"/>
      <property name="ImposterDontBlock" value="true"/>
      <property name="WaterFlow" value="permitted"/>

      <!-- Placement -->
      <property name="Place" value="TowardsPlacerInverted"/>
      <property name="OnlySimpleRotations" value="true"/>
      <property name="IsTerrainDecoration" value="true"/>
      <property name="StabilitySupport" value="false"/>

      <!-- Value -->
      <property name="Weight" value="0"/>
      <property name="EconomicValue" value="2000"/>
      <property name="TraderStageTemplate" value="midTier1"/>

      <!-- Interaction -->
      <property name="MaxDamage" value="1200"/>
      <property name="HeatMapStrength" value="2"/>
      <property name="HeatMapTime" value="5000"/>
      <property name="HeatMapFrequency" value="1000"/>
      <property name="OpenSound" value="cement_mixer_open"/>
      <property name="CloseSound" value="cement_mixer_close"/>
      <property name="CraftSound" value="asylumCrusher_craft"/>
      <property name="CraftCompleteSound" value="cement_mixer_complete"/>
      <property name="TakeDelay" value="5"/>

      <!-- Repairs -->
      <property class="RepairItems">
        <property name="resourceForgedIron" value="25"/>
        <property name="resourceMechanicalParts" value="15"/>
      </property>

      <!-- Drops -->
      <drop event="Harvest" name="resourceScrapIron" count="100" tag="allHarvest"/>
      <drop event="Destroy" count="0"/>
    </block>

  </append>
</configs>

