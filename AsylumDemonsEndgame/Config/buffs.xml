<?xml version="1.0" encoding="UTF-8"?>
<configs>
  <!-- Asylum Demons Endgame - Creative boss auras using vanilla prefabs -->
  <append xpath="/buffs">
    <buff name="asylumBossAura_Infernal" hidden="true" remove_on_death="true">
      <stack_type value="replace"/>
      <effect_group>
        <!-- Chest/torso effects -->

        <!-- Back-mounted relics -->
        <triggered_effect trigger="onSelfBuffStart" action="AttachPrefabToEntity" prefab="@:Entities/electrical/smallGeneratorPrefab.prefab" local_offset="0.0,0.1,-0.25" local_rotation="-90,0,0" local_scale="0.35,0.35,0.35" parent_transform="spine_01"/>
        <triggered_effect trigger="onSelfBuffStart" action="AttachPrefabToEntity" prefab="@:Entities/Electrical/lightIndustrialMountedWallRedPrefab.prefab" local_offset="0.18,0.35,-0.12" local_rotation="0,90,0" local_scale="0.25,0.25,0.25" parent_transform="spine_03"/>

        <!-- Head totem -->
        <triggered_effect trigger="onSelfBuffStart" action="AttachPrefabToEntity" prefab="@:Entities/OutdoorDecor/cowSkullPrefab.prefab" local_offset="0,0.22,0.08" local_rotation="10,0,0" local_scale="0.08,0.08,0.08" parent_transform="head"/>

        <!-- Hands crackle -->
      </effect_group>
      <effect_group>
        <!-- Clean up on removal -->
        <triggered_effect trigger="onSelfBuffRemove" action="RemovePrefabFromEntity" prefab="p_electric_fence_sparks" parent_transform="spine_03"/>
        <triggered_effect trigger="onSelfBuffRemove" action="RemovePrefabFromEntity" prefab="p_nozzlesmoke" parent_transform="spine_03"/>
        <triggered_effect trigger="onSelfBuffRemove" action="RemovePrefabFromEntity" prefab="smallGeneratorPrefab" parent_transform="spine_01"/>
        <triggered_effect trigger="onSelfBuffRemove" action="RemovePrefabFromEntity" prefab="lightIndustrialMountedWallRedPrefab" parent_transform="spine_03"/>
        <triggered_effect trigger="onSelfBuffRemove" action="RemovePrefabFromEntity" prefab="cowSkullPrefab" parent_transform="head"/>
        <triggered_effect trigger="onSelfBuffRemove" action="RemovePrefabFromEntity" prefab="p_electric_shock_small" parent_transform="spine_03"/>
      </effect_group>
    </buff>

    <buff name="asylumBossAura_Charged" hidden="true" remove_on_death="true">
      <stack_type value="replace"/>
      <effect_group>
        <!-- Chest/shoulder arcs -->

