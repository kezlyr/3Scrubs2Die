      <effect_group>
        <!-- Twin obelisks on shoulders (use posts as obelisks) -->
        <triggered_effect trigger="onSelfBuffStart" action="AttachPrefabToEntity" prefab="@:Entities/StreetSigns/1_wood_post.prefab" local_offset="0.28,0.35,-0.05" local_rotation="0,0,5" local_scale="0.18,0.45,0.18" parent_transform="spine_03"/>
        <triggered_effect trigger="onSelfBuffStart" action="AttachPrefabToEntity" prefab="@:Entities/StreetSigns/1_wood_post.prefab" local_offset="-0.28,0.35,-0.05" local_rotation="0,0,-5" local_scale="0.18,0.45,0.18" parent_transform="spine_03"/>

