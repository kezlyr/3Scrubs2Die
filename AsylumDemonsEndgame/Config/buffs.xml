        <triggered_effect trigger="onSelfBuffStart" action="AttachPrefabToEntity" prefab="@:Entities/electrical/satelliteUnitSmallFloorPrefab.prefab" local_offset="0.0,0.16,-0.36" local_rotation="0,180,0" local_scale="0.35,0.35,0.35" parent_transform="spine_01"/>

        <!-- Electrical storm visuals -->
      </effect_group>
