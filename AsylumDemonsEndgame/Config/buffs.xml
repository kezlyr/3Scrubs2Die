        <!-- Ominous smoke rising -->
        <!-- Occasional sparks -->
      </effect_group>
      <effect_group>
        <!-- Clean up -->
        <triggered_effect trigger="onSelfBuffRemove" action="RemovePrefabFromEntity" prefab="1_wood_post" parent_transform="spine_03"/>
        <triggered_effect trigger="onSelfBuffRemove" action="RemovePrefabFromEntity" prefab="cowSkullPrefab" parent_transform="spine_03"/>
        <triggered_effect trigger="onSelfBuffRemove" action="RemovePrefabFromEntity" prefab="p_nozzlesmoke" parent_transform="spine_03"/>
        <triggered_effect trigger="onSelfBuffRemove" action="RemovePrefabFromEntity" prefab="p_electric_fence_sparks" parent_transform="spine_03"/>
