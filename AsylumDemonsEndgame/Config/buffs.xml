        <triggered_effect trigger="onSelfBuffRemove" action="RemovePrefabFromEntity" prefab="smallGeneratorPrefab" parent_transform="spine_01"/>
        <triggered_effect trigger="onSelfBuffRemove" action="RemovePrefabFromEntity" prefab="radioHamPrefab" parent_transform="spine_01"/>
        <triggered_effect trigger="onSelfBuffRemove" action="RemovePrefabFromEntity" prefab="satelliteUnitSmallFloorPrefab" parent_transform="spine_01"/>
        <triggered_effect trigger="onSelfBuffRemove" action="RemovePrefabFromEntity" prefab="p_electric_fence_sparks" parent_transform="spine_03"/>
        <triggered_effect trigger="onSelfBuffRemove" action="RemovePrefabFromEntity" prefab="p_nozzlesmoke_m136" parent_transform="spine_03"/>
      </effect_group>
    </buff>

    <!-- *** ENDGAME DEMON HAND ITEM BUFFS - COLOR-BASED SYSTEM *** -->

    <!-- ========================================================================
         VOID AFFLICTION - Dark purple-black void energy
         Applied by: All Void demons (Highdemon, Fatdemon, Archdemon, Facelessdemon, Sixeyesdemon, Tankdemon)
         Theme: Void/darkness/reality displacement/nothingness
         ======================================================================== -->
    <buff name="buffAsylumVoidAffliction" name_key="buffAsylumVoidAfflictionName" description_key="buffAsylumVoidAfflictionDesc"
          icon="ui_game_symbol_radiation" tooltip_key="buffAsylumVoidAfflictionTooltip" remove_on_death="true">
      <stack_type value="replace"/>
      <duration value="8"/>
      <effect_group>
        <!-- Primary screen effect: Darkness -->
        <triggered_effect trigger="onSelfBuffStart" action="ModifyScreenEffect"
          effect_name="Dark" intensity="0.7" fade="2"/>
        <triggered_effect trigger="onSelfBuffRemove" action="ModifyScreenEffect"
          effect_name="Dark" intensity="0" fade="2"/>
        <triggered_effect trigger="onSelfDied" action="ModifyScreenEffect"
          effect_name="Dark" intensity="0" fade="0"/>

        <!-- Secondary screen effect: Reality distortion -->
        <triggered_effect trigger="onSelfBuffStart" action="ModifyScreenEffect"
          effect_name="Distortion" intensity="0.4" fade="1"/>
        <triggered_effect trigger="onSelfBuffRemove" action="ModifyScreenEffect"
          effect_name="Distortion" intensity="0" fade="1"/>
        <triggered_effect trigger="onSelfDied" action="ModifyScreenEffect"
          effect_name="Distortion" intensity="0" fade="0"/>

        <!-- Particle effect: Void energy -->
        <triggered_effect trigger="onSelfBuffStart" action="AttachParticleEffectToEntity"
          particle="p_electric_shock" parent_transform="Spine1" local_offset="0,0.1,0.3"/>
        <triggered_effect trigger="onSelfBuffRemove" action="RemoveParticleEffectFromEntity"
          particle="p_electric_shock"/>
        <triggered_effect trigger="onSelfDied" action="RemoveParticleEffectFromEntity"
          particle="p_electric_shock"/>

        <!-- Progressive void damage: 8 → 12 → 18 HP over 8 seconds -->
        <passive_effect name="HealthChangeOT" operation="base_subtract"
          duration="0,4,8" value="8,12,18"/>
      </effect_group>
    </buff>

