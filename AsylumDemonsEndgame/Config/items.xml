  <!-- *** ENDGAME DEMON HAND ITEMS - COLOR-BASED SYSTEM *** -->

  <!-- ========================================================================
       UNIVERSAL VOID HAND ITEM
       Used by: All Void demons (Highdemon, Fatdemon, Archdemon, Facelessdemon, Sixeyesdemon, Tankdemon)
       Effect: Applies buffAsylumVoidAffliction (Dark + Distortion + void damage)
       ======================================================================== -->
  <append xpath="/items">
    <item name="meleeHandAsylumVoid">
      <property name="Extends" value="meleeHandZombieStrong"/>
      <property name="CreativeMode" value="None"/>
      <property class="Action0">
        <property name="DamageEntity" value="75"/>
        <property name="DamageBlock" value="1000"/>
        <property name="Range" value="3.5"/>
      </property>
      <effect_group name="meleeHandAsylumVoid" tiered="false">
        <passive_effect name="ModSlots" operation="base_set" value="0"/>

        <!-- Void Reality Tear - Distorts reality in 15-block radius -->
        <triggered_effect trigger="onSelfAttackedOther" action="ModifyScreenEffect"
          target="otherAOE" range="15" effect_name="Distortion" intensity="1" fade="5"/>

        <!-- Void particle effect on primary target -->
        <triggered_effect trigger="onSelfAttackedOther" action="AttachParticleEffectToEntity"
          target="other" particle="p_electric_shock" parent_transform="Spine1"/>

        <!-- Apply Void Affliction buff to primary target -->
        <triggered_effect trigger="onSelfAttackedOther" action="AddBuff"
          target="other" buff="buffAsylumVoidAffliction"/>

        <!-- Void explosion damage in radius -->
        <triggered_effect trigger="onSelfAttackedOther" action="Explode"
          blast_power="0" entity_damage="100" entity_radius="15" damage_type="Special"/>
      </effect_group>
    </item>
  </append>

