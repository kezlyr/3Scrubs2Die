<configs>

  <!-- *** ASYLUM HIGHDEMON CUSTOM HAND ITEMS *** -->
  
  <!-- Uber Highdemon Claws Hand Item -->
  <!-- Custom hand item for endgame uber demons with devastating effects -->
  <append xpath="/items">
    <item name="meleeHandAsylumUberHighdemon">
      <property name="Extends" value="meleeHandZombieStrong"/>
      <property name="CreativeMode" value="None"/>
      <property class="Action0">
        <property name="DamageEntity" value="25"/>
        <property name="DamageBlock" value="25"/>
        <property name="Range" value="2.5"/>
      </property>
      <effect_group name="meleeHandAsylumUberHighdemon" tiered="false">
        <passive_effect name="ModSlots" operation="base_set" value="0"/>
        <!-- Highdemon claws cause devastating laceration and infection -->
        <!-- High laceration chance (50%) with critical effects -->
        <triggered_effect trigger="onSelfAttackedOther" action="AddBuff" target="other" fireOneBuff="true"
          buff="buffInjuryBleedingTwo,buffInfectionCatch,buffInjuryStunned01,buffPainkillerWithdrawal">
          <requirement name="RandomRoll" seed_type="Random" min_max="1,100" operation="LTE" value="50"/>
        </triggered_effect>
        <!-- Additional critical hit chance (30%) for knockdown -->
        <triggered_effect trigger="onSelfAttackedOther" action="AddBuff" target="other" fireOneBuff="true"
          buff="buffInjuryKnockdown01,buffInjuryKnockdown02">
          <requirement name="RandomRoll" seed_type="Random" min_max="1,100" operation="LTE" value="30"/>
        </triggered_effect>
        <!-- Rare devastating combo (10%) - multiple severe effects -->
        <triggered_effect trigger="onSelfAttackedOther" action="AddBuff" target="other" fireOneBuff="true"
          buff="buffInjuryBleedingBarbedWire,buffInfectionCatch,buffInjuryStunned02,buffInjuryKnockdown02">
          <requirement name="RandomRoll" seed_type="Random" min_max="1,100" operation="LTE" value="10"/>
        </triggered_effect>
      </effect_group>
    </item>
  </append>

