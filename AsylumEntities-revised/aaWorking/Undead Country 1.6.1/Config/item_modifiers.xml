		</item_property_overrides>

		<item_property_overrides name="gunSaiga12Shotgun">
			<property name="Sound_start" value="desertvulture_s_fire"/>
			<property name="Sound_loop" value="desertvulture_s_fire"/>
		</item_property_overrides>

		<item_property_overrides name="gunThompsonSMG">
			<property name="Sound_start" value="ak47_s_fire"/>
			<property name="Sound_end" value="silencefiller"/>
