<config>

<csv xpath="/item_modifiers/item_modifier[@name='modGunReflexSight']/@blocked_tags" op="Add">AR16</csv>

<set xpath="/item_modifiers/item_modifier[@name='modArmorPlatingBasic']/effect_group/passive_effect[@name='PhysicalDamageResist']/@value">2</set>

<set xpath="/item_modifiers/item_modifier[@name='modArmorPlatingReinforced']/effect_group/passive_effect[@name='PhysicalDamageResist']/@value">3</set>

<set xpath="/item_modifiers/item_modifier[@name='modGunScopeSmall']/item_property_overrides/property[@name='CrosshairOnAim']/@value">false</set>

<set xpath="/item_modifiers/item_modifier[@name='modGunLaserSight']/item_property_overrides/property[@name='CrosshairOnAim']/@value">false</set>

<set xpath="/item_modifiers/item_modifier[@name='modGunScopeMedium']/item_property_overrides/property[@name='CrosshairOnAim']/@value">false</set>

<set xpath="/item_modifiers/item_modifier[@name='modGunScopeLarge']/item_property_overrides/property[@name='CrosshairOnAim']/@value">false</set>

<set xpath="/item_modifiers/item_modifier[@name='modGunSoundSuppressorSilencer']/effect_group/passive_effect[@name='EntityDamage']/@value">.03</set>

<set xpath="/item_modifiers/item_modifier[@name='modGunSoundSuppressorSilencer']/effect_group/passive_effect[@name='DamageFalloffRange']/@value">.2</set>

<set xpath="/item_modifiers/item_modifier[@name='modGunSoundSuppressorSilencer']/effect_group/passive_effect[@name='MaxRange']/@value">.25</set>

<set xpath="/item_modifiers/item_modifier[@name='modGunFlashlight']/effect_group/triggered_effect/@prefab">Entities/Lighting/miningHelmetLightSource</set>

<append xpath="/item_modifiers/item_modifier[@name='modDyeRed']"> <property name="Group" value="Resources,Chemicals,CFChemicals"/> </append>



<append xpath="/item_modifiers/item_modifier[@name='modGunReflexSight']">
    <item_property_overrides name="gun1911Pistol">
       <property name="ScopeCameraOffset" value="-.0018,-.016,-.2"/>
<!--  Left/Right - Down/Up - Back/Front  -->
    </item_property_overrides>

    <item_property_overrides name="gunGSPistol">
       <property name="ScopeCameraOffset" value="-.0004,-.017,-.2"/>
    </item_property_overrides>

    <item_property_overrides name="gunJerichoPistol">
       <property name="ScopeCameraOffset" value="-0.0008,-0.021,-0.03"/>
    </item_property_overrides>
	
	<item_property_overrides name="gunSaiga12Shotgun">
       <property name="ScopeCameraOffset" value="-.0006,-.019,0.3"/>
    </item_property_overrides>
	
	<item_property_overrides name="gunThompsonSMG">
       <property name="ScopeCameraOffset" value="-0.0017,-0.017,0.25"/>
    </item_property_overrides>
	
	<item_property_overrides name="gunScorpionEVO3SMG">
       <property name="ScopeCameraOffset" value="-0.0004,-0.035,0.05"/>
    </item_property_overrides>
	
	<item_property_overrides name="gunAR15Rifle">
       <property name="ScopeCameraOffset" value="-0.0008,0.003,0.005"/>
    </item_property_overrides>
	
	<item_property_overrides name="gunBoltActionSniper">
       <property name="ScopeCameraOffset" value="-0.0004,0.0092,0.24"/>
    </item_property_overrides>
	
	<item_property_overrides name="gunSaintEdgeSniper">
       <property name="ScopeCameraOffset" value="-0.0012,-0.01,-0.12"/>
    </item_property_overrides>
</append>

<append xpath="/item_modifiers/item_modifier[@name='modGunSoundSuppressorSilencer']">

    <item_property_overrides name="gun1911Pistol">
		<property name="Sound_start" value="pistol_s_fire"/>
