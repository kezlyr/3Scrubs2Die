        <triggered_effect trigger="onSelfDamagedOther" action="AddBuff" target="other" buff="buffInjuryStunned01">
          <requirement name="RandomRoll" seed_type="Random" min_max="1,100" operation="LTE" value="20"/>
        </triggered_effect>
      </effect_group>
    </entity_class>

