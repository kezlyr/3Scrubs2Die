      <property name="MoveSpeedPanic" value="1.9"/>
      <property name="HandItem" value="meleeHandAsylumCrocodile"/>
      <property name="NavObject" value="animaltracking_boar,clear_sleeper"/>
      
      <!-- Loot Configuration -->
      <property name="LootDropEntityClass" value="EntityLootContainerStrong"/>
      <property name="LootDropProb" value="0.7"/>
      
      <!-- Harvest Drops -->
