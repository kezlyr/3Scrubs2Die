      <drop event="Harvest" name="foodRawMeat" tag="butcherHarvest" count="70"/>
      <drop event="Harvest" name="resourceLeather" tag="butcherHarvest" count="18"/>
      <drop event="Harvest" name="resourceAnimalFat" tag="butcherHarvest" count="15"/>
      <drop event="Harvest" name="resourceBone" tag="butcherHarvest" count="30"/>
      <drop event="Harvest" name="resourceBone" tag="allToolsHarvest" count="10"/>
      <drop event="Harvest" name="foodRawMeat" tag="WasteTreasuresCompleteHarvest" count="2"/>
      <drop event="Harvest" name="resourceLeather" tag="WasteTreasuresCompleteHarvest" count="2"/>
      <drop event="Harvest" name="resourceBone" tag="WasteTreasuresCompleteHarvest" count="2"/>
      
