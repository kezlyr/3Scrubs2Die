<Duhwolf>

	<!-- ****************** DuhWolf's Skill coin system from TAGC overhaul 2022********************** -->
	<append xpath="/items">

		<item name="SkillCoinPart">
			<property name="CreativeMode" value="Player"/>
			<property name="CustomIcon" value="SkillCoinpart"/>
			<property name="ItemTypeIcon" value="star"/>
			<property name="HoldType" value="45"/>
			<property name="Meshfile" value="@:Other/Items/Misc/sackPrefab.prefab"/>
			<property name="DropMeshfile" value="@:Other/Items/Misc/sack_droppedPrefab.prefab"/>
			<property name="DescriptionKey" value="SkillCoinPartDesc"/>
			<property name="Material" value="Mmetal"/>
			<property name="Stacknumber" value="10"/>
			<property name="Weight" value="0"/>
			<property name="SellableToTrader" value="false"/>
			<property name="Group" value="Special Items"/>
		</item>

		<item name="SkillCoinComplete">
			<property name="Extends" value="questRewardBundleMaster"/>
			<property name="CreativeMode" value="Player"/>
			<property name="CustomIcon" value="SkillCoin1point"/>
			<property name="CustomIconTint" value="e6e6e6"/>
			<property name="ItemTypeIcon" value="treasure"/>
			<property name="Stacknumber" value="10"/>
			<property name="DescriptionKey" value="SkillCoinCompleteDesc"/>
			<effect_group tiered="false">
				<triggered_effect trigger="onSelfPrimaryActionEnd" action="GiveExp" exp="500"/>
				<triggered_effect trigger="onSelfPrimaryActionEnd" action="SkillPointSDX, SCore" target="self" value="1"/>
				<triggered_effect trigger="onSelfPrimaryActionEnd" action="PlaySound" sound="wolfdireattack"/>
			</effect_group>
			</item>
<item name="SkillCoinCompleteStart">
			<property name="Extends" value="questRewardBundleMaster"/>
			<property name="CreativeMode" value="Player"/>
			<property name="CustomIcon" value="SkillCoin6points"/>
			<property name="CustomIconTint" value="e6e6e6"/>
			<property name="ItemTypeIcon" value="treasure"/>
			<property name="Stacknumber" value="10"/>
			<property name="DescriptionKey" value="SkillCoinCompleteDesc"/>
			<effect_group tiered="false">
				<triggered_effect trigger="onSelfPrimaryActionEnd" action="GiveExp" exp="500"/>
				<triggered_effect trigger="onSelfPrimaryActionEnd" action="SkillPointSDX, SCore" target="self" value="6"/>
				<triggered_effect trigger="onSelfPrimaryActionEnd" action="PlaySound" sound="wolfdireattack"/>
			</effect_group>
		</item>
	</append>
	
</Duhwolf>