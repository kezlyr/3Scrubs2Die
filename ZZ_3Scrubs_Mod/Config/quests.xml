<configs>

<!-- Set Quest Tiers to 10.	For faster or slower progression adjust quests_per_tier value -->
	<set xpath="/quests/@max_quest_tier">10</set>
	
<!-- Quests Required Per Tier -->
	<set xpath="/quests/@quests_per_tier">5</set>

<!-- Skip Intro Quest (other part in dialogs) -->
	<remove xpath="/quests/quest_list[starts-with(@id,'trader_') and (contains(@id,'_quests'))]/quest[@id='intro_buried_supplies']"/>

