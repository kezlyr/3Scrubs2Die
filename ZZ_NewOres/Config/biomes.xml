				</layer>
				<layer depth="3" blockname="terrBedrock"/>
			</layers>
			<decorations>
				<decoration type="prefab" name="deco_cobalt_vein" onslopes="true" prob="0.00078125" rotatemax="3"/>
				<decoration type="prefab" name="deco_quartz_vein" onslopes="true" prob="0.00078125" rotatemax="3"/>
				<decoration type="prefab" name="deco_lithium_vein" onslopes="true" prob="0.00078125" rotatemax="3"/>
			</decorations>
		</subbiome>
	</append>

