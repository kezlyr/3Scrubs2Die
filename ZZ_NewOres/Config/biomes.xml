<?xml version="1.0" encoding="UTF-8"?>
<configs>
	<!-- Better distribution (XML-only): add cobalt ore subbiomes with multiple noise bands. -->
	<!-- This keeps vanilla ore generation intact while introducing cobalt patches you can tune. -->

	<!-- Pine Forest: rare cobalt patches -->
	<append xpath="/worldgeneration/biomes/biome[@name='pine_forest']">
		<!-- Common band -->
		<subbiome noise=".041, 0, 1" noiseoffset="6000, 666">
			<layers>
				<layer depth="1" blockname="terrForestGround"/>
				<layer depth="3" blockname="terrDirt"/>
				<layer depth="1" blockname="terrStone">
					<resource blockname="terrGravel" prob="0.75" rwgGenerationType="all"/>
				</layer>
				<layer depth="*" blockname="terrStone">
					<resource blockname="terrOreIron" prob="0.65" rwgGenerationType="all"/>
					<resource blockname="terrGravel" prob="1" rwgGenerationType="all"/>
				</layer>
				<layer depth="3" blockname="terrBedrock"/>
			</layers>
			<decorations>
                <decoration type="prefab" name="deco_iron_vein" onslopes="true" prob="0.001875" rotatemax="3"/>
                <decoration type="prefab" name="deco_lead_vein" onslopes="true" prob="0.001875" rotatemax="3"/>
                <decoration type="prefab" name="deco_nitrate_vein" onslopes="true" prob="0.001875" rotatemax="3"/>
			</decorations>
		</subbiome>

		<!-- Medium band -->
		<subbiome noise=".027, 0, .08" noiseoffset="12000, 1266">
			<layers>
				<layer depth="1" blockname="terrForestGround"/>
				<layer depth="3" blockname="terrDirt"/>
				<layer depth="1" blockname="terrStone">
					<resource blockname="terrGravel" prob="0.75" rwgGenerationType="all"/>
				</layer>
				<layer depth="*" blockname="terrStone">
					<resource blockname="terrOreIron" prob="0.65" rwgGenerationType="all"/>
					<resource blockname="terrGravel" prob="1" rwgGenerationType="all"/>
				</layer>
				<layer depth="3" blockname="terrBedrock"/>
			</layers>
			<decorations>
				<decoration type="prefab" name="deco_iron_vein" onslopes="true" prob="0.00125" rotatemax="3"/>
				<decoration type="prefab" name="deco_lead_vein" onslopes="true" prob="0.00125" rotatemax="3"/>
                <decoration type="prefab" name="deco_nitrate_vein" onslopes="true" prob="0.00125" rotatemax="3"/>
			</decorations>
		</subbiome>

		<!-- Rare band -->
		<subbiome noise=".041, 0, .03" noiseoffset="6000, 666">
			<layers>
				<layer depth="1" blockname="terrForestGround"/>
				<layer depth="3" blockname="terrDirt"/>
				<layer depth="1" blockname="terrStone">
					<resource blockname="terrGravel" prob="0.75" rwgGenerationType="all"/>
				</layer>
				<layer depth="*" blockname="terrStone">
					<resource blockname="terrOreIron" prob="0.65" rwgGenerationType="all"/>
					<resource blockname="terrGravel" prob="1" rwgGenerationType="all"/>
				</layer>
				<layer depth="3" blockname="terrBedrock"/>
			</layers>
			<decorations>
				<decoration type="prefab" name="deco_iron_vein" onslopes="true" prob="0.00078125" rotatemax="3"/>
				<decoration type="prefab" name="deco_lead_vein" onslopes="true" prob="0.00078125" rotatemax="3"/>
                <decoration type="prefab" name="deco_nitrate_vein" onslopes="true" prob="0.00125" rotatemax="3"/>
			</decorations>
		</subbiome>
	</append>

