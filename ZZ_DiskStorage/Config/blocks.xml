  <property name="MaxDamage" value="5000" />
  <property class="RepairItems">
    <property name="resourceForgedSteel" value="30" />
  </property>
  <drop event="Destroy" count="0" />
  <drop event="Fall" name="scrapMetalPile" count="1" prob="0.75" stick_chance="1" />
  <property name="EconomicValue" value="1500" />
  <property name="SortOrder1" value="0200" />
  <property name="SortOrder2" value="0202" />
  <property name="UnlockedBy" value="craftingWorkstations" />
  </block>

  <block name="diskDropBoxT1">
  <property name="Extends" value="diskDropBox" />
  <property name="LootList" value="diskDropBoxContainerT1" />
  <property name="DescriptionKey" value="diskDropBoxT1Desc" />
  <property name="Stacknumber" value="1"/>
  <property name="EconomicValue" value="2800" />
  <property name="UnlockedBy" value="craftingWorkstations" />
  </block>

  <block name="diskDropBoxT2">
  <property name="Extends" value="diskDropBox" />
  <property name="LootList" value="diskDropBoxContainerT2" />
  <property name="DescriptionKey" value="diskDropBoxT2Desc" />
  <property name="Stacknumber" value="1"/>
  <property name="EconomicValue" value="4200" />
  <property name="UnlockedBy" value="craftingWorkstations" />
  </block>
  </append>
</configs>
